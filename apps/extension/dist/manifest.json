{
  "manifest_version": 3,
  "name": "Referral Extension",
  "version": "0.1.0",
  "description": "Get rewards for your product research.",
  "permissions": ["storage"],
  "host_permissions": ["https://chat.openai.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Referral Extension"
  }
} 